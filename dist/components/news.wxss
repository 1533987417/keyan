.swiper_container {
  height: 500rpx;
  width: 90vw;
  margin-top: 4px;
  margin-left: 5px;
  box-shadow: 10rpx #ddd;
  margin-left: 6px;
}
.swiper-item {
  color: #0032FF;
  font-size: 15px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}
.sub_swiper-item {
  color: #000000;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
  text-align: left;
}
.fenge {
  height: 1px;
  width: 100%;
  background-color: #DCDCDC;
  margin-bottom: 10px;
  margin-top: 5px;
}
