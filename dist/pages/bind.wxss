page {
  height: 100%;
  background: radial-gradient(ellipse at bottom, #1b2735 0%, #090a0f 100%);
  overflow: hidden;
}
.help {
  font-size: 0.7rem;
  color: #888;
  padding: 0 3%;
}
.input-group {
  border: 1px solid rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  padding: 25rpx 10rpx;
  margin: 40rpx 3%;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 5px;
}
.input-group:hover {
  transition: all 1s;
  border: 1px solid #fefefe;
}
.input-group:hover .input-label {
  color: #fefefe;
  border-right: 1px solid #fefefe;
}
.input-group .input-label {
  color: #fefefe;
  font-size: 13pt;
  height: 25rpx;
  line-height: 25rpx;
  padding: 0 25rpx;
  border-right: 1px solid #d8d8d8;
}
.input-group input {
  color: #fefefe;
  flex: 1;
  font-size: 13pt;
  min-height: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 25rpx;
}
.input-group .input-placeholder,
.input-group picker.placeholder {
  color: #ccc;
}
#bind {
  width: 100%;
  height: 100%;
}
#bind #content {
  border-radius: 10rpx;
  margin: 100rpx auto;
  padding-top: 40rpx;
  background-color: #5B5B5BFF;
  width: 95%;
  height: 700rpx;
}
#bind #content #title {
  font-size: 40rpx;
  text-align: center;
  color: #fefefe;
}
#bind #content button {
  background: rgba(255, 255, 255, 0.15);
  color: #fff;
  margin: 20rpx;
}
#bind #content form {
  padding-top: 20rpx;
  display: block;
  width: 100%;
}
